<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grid_grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/textinput_background</item>
        <item name="boxStrokeColor">@color/title_gold</item>
        <item name="strokeColor">@color/title_gold</item>
        <item name="android:strokeColor">@color/title_gold</item>
        <item name="chipStrokeColor">@color/title_gold</item>
        <item name="itemStrokeColor">@color/title_gold</item>
        <item name="thumbStrokeColor">@color/title_gold</item>
    </style>

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@android:color/transparent</item>
        <item name="colorPrimary">@color/textinput_background</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#2E78F0</item>
        <item name="android:calendarTextColor">@android:color/white</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

</resources>